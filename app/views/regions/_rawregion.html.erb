<div class="row">
  <div class="col-xs-12 col-xs-offset-0">
    <div class="well well-lg">
      <h3>dB Region - <%= pluralize(@rawregions.count, "record") if @rawregions %></h3>
      <table border="1" cellspacing = "5" cellpadding = "5">
        <thead>
          <tr>
            <th>Updated_at</th>
            <th>Place_id</th>
            <th>Country</th>
            <th>Region</th>            
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @rawregions.each do |region| %>
            <tr>
              <td><%= region.updated_at.localtime "+08:00" %></td>
              <td align="center"><%= region.place_id %></td>
              <td><%= region.place.name %></td>              
              <td><%= region.name %></td>
              <td><%= link_to 'Edit', edit_region_path(region, :m_place_id => params[:m_place_id], :country_name => params[:country_name])%></td>
              <td><%= link_to 'Destroy', region_path(region, :m_place_id => params[:m_place_id], :country_name => params[:country_name]), method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


