<div class="row">
  <div class="col-xs-8 col-xs-offset-2">
    <div class="well well-lg">
      <table width="100%" border="0" cellspacing="5" cellpadding="5">
        <% obj.each do |region| %>
          <tr>
            <td align="right"><%= region.name %> --- <br><br></td>
            <td>
              <% if current_user.admin? %>
                <%= link_to "Edit this Region", edit_region_path(region, :m_place_id => params[:m_place_id], :country_name => params[:country_name]), class: "btn btn-xs btn-primary" %>
                <%= link_to "Delete this Region", region_path(region, :m_place_id => params[:m_place_id], :country_name => params[:country_name]), method: :delete,
                data: { confirm: "Are you sure you want to delete this Region?"},
                class: "btn btn-xs btn-danger" %>
                | <%= link_to "Manage Areas", new_area_path(:m_region_id => region.id, :country_name => params[:country_name], :m_place_id => params[:m_place_id], :region_name => region.name)  %>
                     - <%= pluralize(region.areas.count, "") if region.areas %>
              <% end %><br><br>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>