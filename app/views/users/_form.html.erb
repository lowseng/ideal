<%= render 'shared/errors', obj: @user %>
<div class='row'> 
  <div class='col-xs-12'>
    <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %> 

      <div class="form-group"> 
        <div class="control-label col-sm-2"> 
          <%= f.label :email, "Email" %> 
        </div> 
        <div class="col-sm-8"> 
          <%= @user.email %> 
        </div> 
      </div> 
      <div class="form-group"> 
        <div class="control-label col-sm-2"> 
          <%= f.label :created_at, "Created" %> 
        </div> 
        <div class="col-sm-8"> 
          <%= @user.created_at %> 
        </div> 
      </div> 
      <div class="form-group"> 
        <div class="control-label col-sm-2"> 
          <%= f.label :confirmed_at, "Confirmed" %> 
        </div> 
        <div class="col-sm-8"> 
          <%= @user.confirmed_at%> 
        </div> 
      </div>   
      <div class="form-group"> 
        <div class="control-label col-sm-2"> 
          <%= f.label :updated_at, "Updated" %> 
        </div> 
        <div class="col-sm-8"> 
          <%= @user.updated_at %> 
        </div> 
      </div>
      <div class="form-group"> 
        <div class="control-label col-sm-2"> 
          <%= f.label :last_sign_in_ip, "Last Signed-In IP" %> 
        </div> 
        <div class="col-sm-8"> 
          <%= @user.last_sign_in_ip %> 
        </div> 
      </div>        
      <div class="form-group"> 
        <div class="control-label col-sm-2"> 
          <%= f.label :admin, "Administrator" %> 
        </div> 
        <div class="col-sm-8" > 
            <%= f.radio_button :admin, 'true' %> Yes&nbsp;&nbsp;&nbsp;
            <%= f.radio_button :admin, 'false' %> No
        </div> 
      </div>
      <div class="form-group"> 
        <div class="control-label col-sm-2"> 
          <%= f.label :current_sign_in_at, "CurrentlySigned-In at" %> 
        </div> 
        <div class="col-sm-8"> 
          <%= @user.current_sign_in_at %> 
        </div> 
      </div>
      <div class="form-group"> 
        <div class="control-label col-sm-2"> 
          <%= f.label :sign_in_count, "Signed-In Count" %> 
        </div> 
        <div class="col-sm-8"> 
          <%= @user.sign_in_count %> 
        </div> 
      </div> 
      <div class="form-group"> 
        <div class="col-sm-offset-2 col-sm-10"> 
          <%= f.submit class: 'btn btn-primary btn-lg' %> 
        </div> 
      </div> 
    <% end %> 
    <div class="col-xs-4 col-xs-offset-4"> 
      [ <%= link_to "Cancel request and return to user listing", users_path %> ] 
    </div> 
  </div> 
</div>