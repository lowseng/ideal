<div class="row">
  <div class="col-xs-8 col-xs-offset-2">
    <div class="well well-lg">
      <table width="100%" border="0" cellspacing="5" cellpadding="5">
        <% obj.each do |otherinfo| %>
          <tr>
            <td>
              <%= link_to new_area_path(:m_otherinfo_id => otherinfo.id, :country_name => params[:country_name], :m_place_id => params[:m_place_id], :otherinfo_name => otherinfo.name) do %>
                <%= otherinfo.name %>
              <% end %><br><br> 
            </td>
            <td>
              <% if current_user.admin? %>
              
                <%= link_to "Edit this Info", edit_otherinfo_path(otherinfo, :m_place_id => params[:m_place_id], :country_name => params[:country_name]), class: "btn btn-xs btn-primary" %>
                <%= link_to "Delete this Info", otherinfo_path(otherinfo, :m_place_id => params[:m_place_id], :country_name => params[:country_name]), method: :delete,
                data: { confirm: "Are you sure you want to delete this Info?"},
                class: "btn btn-xs btn-danger" %>
              <% end %><br><br>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>