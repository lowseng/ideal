<h2 align="center">Title: <%= @article.title %></h2>
<div class="well col-xs-8 col-xs-offset-2">


  
  <% @article.images.each do |t| %>
    <td width = "160">  <%= image_tag t.picture.url, size: "150x100" %>
    </td>
  <% end %>
  
  
  
  <h4 class="center description"><strong>Description:</strong></h4>
  <hr>
  <%= simple_format(@article.description) %>
  <div class="article-actions">
    <% if current_user && current_user == @article.user || current_user.admin?  %>
      <%= link_to "Edit this article", edit_article_path(@article), class: "btn btn-xs btn-primary" %>
      <%= link_to "Delete this article", article_path(@article), method: :delete,
      data: { confirm: "Are you sure you want to delete the article?"},
      class: "btn btn-xs btn-danger" %>
      <%= link_to "View all articles", articles_path, class: "btn btn-xs btn-success" %>
    <% end %>
  </div>
  
  
  <% if @article.user %>
    <ul class="listing">
      <div class="row center">
        <div class="col-md-4 col-md-offset-4">
          <li>Created by:</li>


            <% if current_user && current_user == @article.user || current_user.admin?  %>
              <li><%= link_to gravatar_for(@article.user), user_path(@article.user) %></li>
              <li class="article-title">
              <%= link_to @article.user.email, user_path(@article.user) %>
            <% else %>
              <li><%= gravatar_for(@article.user) %></li>
              <li class="article-title">
              <%=  @article.user.email %>
            <% end %>
          </li>
          <li><small>
            <%= pluralize(@article.user.articles.count, "article") if @article.user.articles %>
          </small></li>
        </div>
      </div>
    </ul>
  <% end %>  
</div>