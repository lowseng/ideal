<%= render 'shared/errors', obj: @article %>

<div class='row'> 
  <div class='col-xs-12'>
    <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %> 

      <div class="form-group"> 
        <div class="control-label col-sm-2"> 
          <%= f.label :proptype, "Type" %> 
        </div> 
        <div class="col-sm-8"> 
            <%= f.radio_button :proptype, 'For Sale' %> For Sale&nbsp;&nbsp;&nbsp;
            <%= f.radio_button :proptype, 'To Let' %> To Let&nbsp;&nbsp;&nbsp;
            <%= f.radio_button :proptype, 'For Auction' %> For Auction
        </div> 
      </div>
      
      <div class="form-group"> 
        <div class="control-label col-sm-2"> 
          <%= f.label :title, "Title NAme" %> 
        </div> 
        <div class="col-sm-8"> 
          <%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %> 
        </div> 
      </div> 
      <div class="form-group"> 
        <div class="control-label col-sm-2"> 
          <%= f.label :description %> 
        </div> 
        <div class="col-sm-8"> 
          <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Body of article" %> 
        </div> 
      </div> 
      <div class="form-group"> 
        <div class="col-sm-offset-2 col-sm-10"> 
          <%= f.submit class: 'btn btn-primary btn-lg' %> 
        </div> 
      </div> 
    <% end %> 
    <div class="col-xs-4 col-xs-offset-4"> 
      [ <%= link_to "Cancel request and return to articles listing", articles_path %> ] 
    </div> 
  </div> 
</div>