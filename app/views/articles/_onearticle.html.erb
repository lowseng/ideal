<div class="well col-xs-10 col-xs-offset-1">
  <% if @article.user %>
    <table width = 100% border="0">
      <tr>
        <td valign="bottom" width=33%>
          <h3><%= @article.user.name %></h3>
          Agency Name: <%= @article.user.company %><br>
          Agent Id: <%= @article.user.agentno %>
        </td>
        <td align = "center">
          <% if params[:param1] == "1" %>
            <% if current_user && current_user == @article.user || current_user && current_user.admin? %>
              <%= gravatar_for @article.user, size:120 %>
            <% else %>
              <%= gravatar_for @article.user, size:120 %>
            <% end %>
          <% end %>
        </td>
        <td valign="bottom" width=33% align="right">
          <%= @article.user.telephone %> <span class='glyphicon glyphicon-earphone'></span><br>
          <%= link_to @article.user.email, "mailto:"+@article.user.email %> <span class='glyphicon glyphicon-envelope'></span><br>          
          <%= link_to pluralize(@article.user.articles.count, "listing"), user_path(@article.user) if @article.user.articles %> <span class='glyphicon glyphicon-tasks'></span><br>
          <%= @article.created_at %> <span class='glyphicon glyphicon-time'></span>

        </td>
      </tr>
    </table><hr>
    <!--
    <table width="100%" border="0" cellspacing="5" cellpadding="5">
      <tr valign="center">  
        <%# @article.images.each do |t| %>
          <td  valign="center"><%#= image_tag t.picture.url, size: "280x190" %></td>
        <%# end %>
      </tr>
    </table> -->
  <% end %>  
  <h3 align="center"><b><%= @article.title %></b></h3>
  <h4 align="center"><b><%= @area.name %> &#183; <%= @region.name %> &#183; <%= @place.name %></b></h4><br>
    <table width = 100% border="0" >
      <tr>
        <td valign="bottom" width=100> 
          <b><%= "Category:" %></b>
        </td>
        <td>
          <%= @article.category %> <%= @article.proptype %>
        </td>
        <td align="right" valign="bottom" colspan="2"> 
          <b><%= "Id: " %></b><%= @article.id %>
        </td>
      </tr>
      <tr>
        <td valign="bottom"> 
          <b><%= "Size:" %></b>
        </td>
        <td>
          <%= @article.size %> 
            <%= "Sqft" if @article.uom == "1" %><%= "Sqm" if @article.uom == "2" %><%= "Acre(s)" if @article.uom == "3" %><%= "Hectre(s)" if @article.uom == "4" %>
              (<%= number_with_precision(@article.size*0.092903, precision: 2, delimiter: ',') if @article.uom == "1" %><%= " Sqm" if @article.uom == "1" %>
              <%= number_with_precision(@article.size*10.7639, precision: 2, delimiter: ',') if @article.uom == "2" %><%= " Sqft" if @article.uom == "2" %>
              )
        </td>

      </tr>
      <tr>
        <td valign="top"> 
          <b><%= "Facilities:" %></b>
        </td>
        <td>
          <%= "Lift/ Elevator, " if @article.xlift? %><%= "Swimming Pool, " if @article.xpool? %><%= "Squash Court, " if @article.xsqua? %>
          <%= "Playground, " if @article.xplay? %><%= "Balcony, " if @article.xbalc? %><%= "Gymnasium, " if @article.xgymn? %>
          <%= "Mini Market, " if @article.xmini? %><%= "Jogging Track, " if @article.xjogg? %><%= "Cable TV, " if @article.xcabl? %>
          <%= "Tennis Court, " if @article.xtenn? %><%= "Covered Car Park, " if @article.xpark? %>
          <%= "24 hours Security, " if @article.xsecu? %><%= "etc." %>
        </td>

      </tr>
      <tr>
        <td > 
          <b><%= "Other info:" %></b>
        </td>
        <td>
          <%= @otherinfo.name %>
        </td>
        <td align="right" valign="bottom" width=150> 
          <b><%= "Bedrooms: " %></b>
        </td>
        <td  align='right' width="20">
          <%= @article.bedroom %>
        </td>
      </tr>
      <tr>
        <td> 
          <b><%= "Amount:" %></b>
        </td>
        <td>
          <%= @place.currency %> <%= number_with_precision(@article.amount, precision: 0, delimiter: ',') %>
        </td>
        <td Align="right" valign="top"> 
          <b><%= "Bathrooms: " %></b>
        </td>
        <td align='right' valign="top">
          <%= @article.bathroom %>
        </td>
      </tr>
    </table><br>
  <b><%= "Description:" %></b>
  <%= simple_format(@article.description) %>



</div>