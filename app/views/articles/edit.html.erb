<% if session[:mobile] == "Y" %>
  <div class='col-xs-offset-0 col-xs-12 gutter-0'>
    <% if params[:param1] == 'confirm' %>
      <h4><%= session[:step2]%> Id. <%= @article.id %> - Step 2 </h4>   
    <% else %>
      <h4>&nbsp;Modify Ad Id. <%= @article.id %></h4>
      <% session[:step2] = "Modify Ad" %>
    <% end %>
  </div>
  <%= render 'mmform' %>
  <% if params[:param1] == 'confirm' %>
    <a id="images"></a>
    <% current_article = @article.id %>
    <% session[:current_article] = current_article %>
    <%= render :partial => 'images/mmform', :object => @image %>
    <%#= render :partial => 'images/mmform' %>
  <% end %>
  <br><br><br><br>
<% else %>
  <div class='row'> 
    <div class='col-sm-offset-0 col-xs-12'>
      <div class="well well-lg">
        <h4 align="center">Modify Ad</h4>
        <%= render 'form' %>
        <% if params[:param1] == 'confirm' %>
          <br><a id="images"></a><br>
          <% current_article = @article.id %>
          <% session[:current_article] = current_article %>
          <%= render :partial => 'images/form', :object => @image %>
      <% end %>
      </div>
    </div>
  </div>  
<% end %>