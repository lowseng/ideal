<% if current_user.articles.count >= session[:m_posting] %>
  <% if current_user.admin? %>
  <% else %>
    <br><br><br><br><br><br><br><br><br>
    <h4 align="center"><%= "You have exceeded the number of ads permitted on your account!" %></h4>
    <br><br><br><br><br><br><br><br><br>
  <% end %>
<% else %>
  <% if session[:mobile] == "Y" %>
    <div class='col-xs-offset-0 col-xs-12 gutter-0'>
      <h4 align="left">Insert a New Ad - No. <%= current_user.articles.count+1 %> of <%= session[:m_posting] %></h4>   
    </div>
    <%= render 'mmform' %> 
  <% else %>
    <h4 align="left">Insert a New Ad - No. <%= current_user.articles.count+1 %> of <%= session[:m_posting] %></h4>
    <%= render 'form' %>
  <% end %>
<% end %>