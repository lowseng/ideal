
  <div class='col-xs-12'>
    <%= form_for(@place, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group"> 
        <div class="control-label col-sm-offset-0 col-sm-3">  
          <%= f.text_field :name, placeholder: "Country name" %>
        </div>
        <div class="control-label col-sm-1">  
          <%= f.text_field :currency, placeholder: "USD?" %>
        </div>
        <div class="control-label col-sm-offset-1 col-sm-3">  
          <%= "Online?" %>
          <%= f.radio_button :status, 'true' %> Yes&nbsp;
          <%= f.radio_button :status, 'false' %> No
        </div>
        <div class="col-sm-offset-0 col-sm-1"> 
          <%= f.submit %> 
        </div>
      </div>
     <% end %>
  </div>
