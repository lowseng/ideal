<div class="row">
  <div class="col-xs-8 col-xs-offset-2">
    <div class="well well-lg">
      <table width="100%" border="0" cellspacing="5" cellpadding="5">
        <% obj.each do |place| %>
          <tr>
            <td align="right"><%= place.name %> --- <br><br></td>
            <td>
              <% if current_user.admin? %>
                <%= link_to "Edit this Country", edit_place_path(place), class: "btn btn-xs btn-primary" %>
                <%= link_to "Delete this Country", place_path(place), method: :delete,
                data: { confirm: "Are you sure you want to delete this Country?"},
                class: "btn btn-xs btn-danger" %>
                | <%#= link_to "Manage Regions", regions_path(:m_place_id => place.id, :country_name => place.name)  %>
                <%= link_to "Manage Regions", new_region_path(:m_place_id => place.id, :country_name => place.name)%>
                     - <%= pluralize(place.regions.count, "") if place.regions %>
              <% end %><br><br>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
