<div class="row">
  <div class="col-xs-8 col-xs-offset-2">
    <div class="well well-lg">
      <table width="100%" border="0" cellspacing="5" cellpadding="5">
        <% obj.each do |area| %>
          <tr>
            <td align="right"><%= area.name %> --- <br><br></td>
            <td>
              <% if current_user.admin? %>
                <%= link_to "Edit this Area", edit_area_path(area, :m_place_id => params[:m_place_id], :country_name => params[:country_name], :m_region_id => params[:m_region_id], :region_name => params[:region_name]), class: "btn btn-xs btn-primary" %>
                <%= link_to "Delete this Area", area_path(area, :m_place_id => params[:m_place_id], :country_name => params[:country_name], :m_region_id => params[:m_region_id], :region_name => params[:region_name]), method: :delete,
                data: { confirm: "Are you sure you want to delete this Area?"},
                class: "btn btn-xs btn-danger" %>
             <% end %><br><br>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>